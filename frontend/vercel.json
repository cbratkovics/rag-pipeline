{
  "framework": "nextjs",
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=512' npm run build",
  "installCommand": "npm install --production=false",
  "devCommand": "npm run dev",
  "outputDirectory": ".next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://rag-pipeline-api-hksb.onrender.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
